<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f9;
      margin: 0;
      padding: 0;
      padding-top: 60px; /* Adjust for fixed navbar */
    }

    h1, h2 {
      text-align: center;
      color: #0073e6;
      margin-top: 20px;
      animation: fadeIn 1s ease-in-out;
    }

    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: #0073e6;
      padding: 10px 20px;
      color: white;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      z-index: 1000;
    }

    .navbar h1 {
      margin: 0;
    }

    .nav-options a {
      color: white;
      text-decoration: none;
      margin-left: 20px;
    }

    .notification {
      display: none;
      background-color: #ff4d4d;
      color: white;
      padding: 10px;
      border-radius: 5px;
      position: fixed;
      top: 10%;
      left: 50%;
      transform: translate(-50%);
      z-index: 1000;
      text-align: center;
    }

    .notification.show {
      display: block;
    }

    .progress-bar {
      height: 5px;
      background-color: white;
      margin-top: 10px;
      animation: progress 3s linear forwards;
    }

    @keyframes progress {
      from {
        width: 0;
      }
      to {
        width: 100%;
      }
    }

    .summary-bar {
      display: none;
      justify-content: space-between;
      align-items: center;
      background-color: #0073e6;
      color: white;
      padding: 10px;
      border-radius: 5px;
      position: fixed;
      bottom: 10px;
      left: 50%;
      width: auto;
      z-index: 1000;
      transform: translateX(-50%);
    }

    .summary-bar span {
      margin: 0 20px;
      font-weight: bold;
    }

    .menu-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
      margin-top: 20px; /* Adjust for fixed navbar */
      margin-bottom: 20px;
    }

    .card {
      background-color: white;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 20px;
      width: 300px;
      transition: transform 0.3s ease, max-height 0.3s ease;
      overflow: hidden;
    }

    .card.expanded {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: white;
      z-index: 1000;
      overflow-y: auto;
      transform: scale(1);
      max-height: none;
    }

    .card h3 {
      margin-top: 0;
    }

    .price {
      color: #0073e6;
      font-weight: bold;
    }

    .quantity-controls {
      display: flex;
      align-items: center;
      margin-top: 10px;
    }

    .quantity-controls button {
      background-color: #0073e6;
      color: white;
      border: none;
      padding: 5px 10px;
      border-radius: 5px;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .quantity-controls button:hover {
      background-color: #005bb5;
    }

    .quantity-controls input {
      width: 50px;
      text-align: center;
      margin: 0 10px;
      padding: 5px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    .additional-info {
      display: none;
      margin-top: 20px;
    }

    .additional-info img {
      max-width: 100%;
      height: auto;
    }

    .close-button {
      position: absolute;
      top: 20px;
      right: 20px;
      background-color: #ff4d4d;
      color: white;
      border: none;
      padding: 10px;
      border-radius: 5px;
      cursor: pointer;
      display: none;
    }

    .close-button:hover {
      background-color: #d43f3f;
    }

    .card.expanded .close-button {
      display: block;
    }

    .card.expanded .additional-info {
      display: block;
    }

    .submit-button-container {
      text-align: center;
      margin-top: 20px;
    }

    .submit-button {
      background-color: #0073e6;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .submit-button:hover {
      background-color: #005bb5;
      transform: scale(1.1);
    }

    .submit-button:active {
      background-color: #003f7f;
      transform: scale(0.95);
    }
  </style>
</head>
<body>
  <!-- Navigation Bar-->
  <div class="navbar">
    <h1>Langley Eats</h1>
    <div class="nav-options">
      <a href="/student_dashboard">Dashboard</a>
      <a href="/profile" class="profile">ðŸ‘¤</a>
    </div>
  </div>
  <!-- Main Content-->
  <div class="notification" id="notification">
    Max order limit of 50 items reached!
    <div class="progress-bar" id="progress-bar"></div>
  </div>

  <div class="summary-bar" id="summary-bar">
    <span id="total-items">Total Items: 0</span>
    <span id="total-price">Total Price: Â£0.00</span>
  </div>

  <form id="order-form" action="/submit-order" method="POST">
    <div class="menu-container card-layout">
      <% items.forEach(item => { %>
        <div class="card" data-id="<%= item.item_id %>" data-price="<%= item.price %>" data-category="<%= item.category %>">
          <h3><%= item.item_name %></h3>
          <p class="price">Â£<%= item.price %></p>
          <div class="quantity-controls" onclick="event.stopPropagation()">
            <button type="button" class="decrease">-</button>
            <input type="number" class="quantity" name="quantity_<%= item.item_id %>" value="0" min="0" data-previous-value="0">
            <button type="button" class="increase">+</button>
          </div>
          <div class="additional-info">
            <p><strong>Ingredients:</strong> <%= item.ingredients %></p>
            <p><strong>Allergy Info:</strong> <%= item.allergy_info %></p>
            <p><strong>Description:</strong> <%= item.description %></p>
            <% if (item.image) { %>
            <img src="/uploads/<%= item.image %>" alt="<%= item.item_name %>">
            <% } %>
          </div>
          <button type="button" class="close-button" onclick="closeCard(event)">Close</button>
        </div>
      <% }) %>
    </div>
    <div class="submit-button-container">
      <button type="submit" class="submit-button">Submit Order</button>
    </div>
  </form>

  <script src="/js/menuworks.js"></script>
</body>
</html>