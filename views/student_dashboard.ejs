<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Dashboard</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f9;
    }

    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: #0073e6;
      color: white;
      padding: 10px 20px;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
    }

    .navbar h1 {
      margin: 0;
    }

    .nav-options {
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .nav-options a {
      color: white;
      text-decoration: none;
      padding: 10px;
      border-radius: 5px;
      transition: background-color 0.3s;
      position: relative;
    }

    .nav-options a:hover {
      background-color: #005bb5;
    }

    .nav-options a::after {
      content: attr(data-tooltip);
      position: absolute;
      bottom: -25px;
      left: 50%;
      transform: translateX(-50%);
      background-color: #333;
      color: white;
      padding: 5px;
      border-radius: 5px;
      opacity: 0;
      transition: opacity 0.3s;
      pointer-events: none;
      white-space: nowrap;
    }

    .nav-options a:hover::after {
      opacity: 1;
    }

    .profile-dropdown {
      position: relative;
    }

    .profile-dropdown-content {
      display: none;
      position: absolute;
      right: 0;
      background-color: white;
      color: black;
      min-width: 150px;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
      z-index: 1;
      border-radius: 5px;
      overflow: hidden;
    }

    .profile-dropdown-content a {
      color: black;
      padding: 12px 16px;
      text-decoration: none;
      display: block;
      transition: background-color 0.3s;
    }

    .profile-dropdown-content a:hover {
      background-color: #f1f1f1;
    }

    .profile-dropdown:hover .profile-dropdown-content {
      display: block;
    }

    .container {
      display: flex;
      padding: 20px;
      height: calc(100vh - 60px);
      margin-top: 60px;
    }

    .advertisement, .slideshow {
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      padding: 20px;
    }

    .advertisement {
      flex: 1;
      margin-right: 20px;
    }

    .right-section {
      display: flex;
      flex-direction: column;
      flex: 2;
    }

    .slideshow {
      flex: 1;
      margin-bottom: 20px;
    }

    .order-now {
      background-color: #0073e6;
      color: white;
      border: 2px solid #0073e6;
      border-radius: 8px;
      padding: 20px;
      text-align: center;
      font-size: 20px;
      cursor: pointer;
      transition: background-color 0.3s ease, border-color 0.3s ease;
      margin-top: auto;
      text-decoration: none;
      display: block;
    }

    .order-now:hover {
      background-color: #005bb5;
      border-color: #005bb5;
    }
  </style>
</head>
<body>
  <!-- Navigation Bar -->
  <div class="navbar">
    <h1>Langley Eats</h1>
    <div class="nav-options">
      <a href="/menu" data-tooltip="Menu"><i class="fas fa-utensils"></i></a>
      <a href="/order_status" data-tooltip="Order Status"><i class="fas fa-receipt"></i></a>
      <div class="profile-dropdown">
        <a href="#" data-tooltip="Profile"><i class="fas fa-user"></i></a>
        <div class="profile-dropdown-content">
          <a href="/profile">Account Details</a>
          <a href="/logout">Logout</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="container">
    <!-- Advertisement Section -->
    <div class="advertisement">
      <img src="/Public/uploads/Poster.jpg" alt="poster"  style="width: 100%; height: auto; border-radius: 8px;">
    </div>

    <!-- Right Section -->
    <div class="right-section">
      <!-- Slideshow Section -->
      <div class="slideshow">
        SLIDE SHOW OF IMAGES
      </div>

      <!-- Order Now Button -->
      <a href="/menu" class="order-now">
        Order Now
      </a>
    </div>
  </div>
</body>
</html>