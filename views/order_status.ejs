<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Status</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #0073e6;
            color: white;
            padding: 10px 20px;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
        }

        .navbar h1 {
            margin: 0;
        }

        .nav-options {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .nav-options a {
            color: white;
            text-decoration: none;
            padding: 10px;
            border-radius: 5px;
            transition: background-color 0.3s;
            position: relative;
        }

        .nav-options a:hover {
            background-color: #005bb5;
        }

        .nav-options a::after {
            content: attr(data-tooltip);
            position: absolute;
            bottom: -25px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #333;
            color: white;
            padding: 5px;
            border-radius: 5px;
            opacity: 0;
            transition: opacity 0.3s;
            pointer-events: none;
            white-space: nowrap;
        }

        .nav-options a:hover::after {
            opacity: 1;
        }

        .profile-dropdown {
            position: relative;
        }

        .profile-dropdown-content {
            display: none;
            position: absolute;
            right: 0;
            background-color: white;
            color: black;
            min-width: 150px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            z-index: 1;
            border-radius: 5px;
            overflow: hidden;
        }

        .profile-dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            transition: background-color 0.3s;
        }

        .profile-dropdown-content a:hover {
            background-color: #f1f1f1;
        }

        .profile-dropdown:hover .profile-dropdown-content {
            display: block;
        }

        .container {
            padding: 20px;
            margin-top: 60px;
        }

        table {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
            font-size: 16px;
            word-wrap: break-word;
        }

        th {
            background-color: #0073e6;
            color: white;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        .progress-bar-container {
            width: 100%;
            background-color: #ddd;
            border-radius: 5px;
            overflow: hidden;
            margin-top: 10px;
        }

        .progress-bar {
            height: 20px;
            background-color: #0073e6;
            width: 0;
            transition: width 0.5s ease-in-out;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <div class="navbar">
        <h1>Langley Eats</h1>
        <div class="nav-options">
            <a href="/student_dashboard" data-tooltip="Home"><i class="fas fa-home"></i></a>
            <a href="/menu" data-tooltip="Menu"><i class="fas fa-utensils"></i></a>
            <div class="profile-dropdown">
                <a href="#" data-tooltip="Profile"><i class="fas fa-user"></i></a>
                <div class="profile-dropdown-content">
                    <a href="/profile">Account Details</a>
                    <a href="/logout">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container">
        <h2>Your Orders</h2>
        <table>
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Total Amount</th>
                    <th>Order Date</th>
                    <th>Status</th>
                    <th>Progress</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(order => { %>
                <tr class="<%= order.status === 'ready to collect' ? 'ready-to-collect' : '' %>">
                    <td><%= order.order_id %></td>
                    <td>Â£<%= order.total_amount %></td>
                    <td><%= new Date(order.order_date).toLocaleString('en-GB', { timeZone: 'UTC', hour12: false }).replace(/ GMT.*$/, '') %></td>
                    <td><%= order.status %></td>
                    <td>
                        <div class="progress-bar-container">
                            <div class="progress-bar" data-status="<%= order.status %>"></div>
                        </div>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const progressBars = document.querySelectorAll('.progress-bar');
            progressBars.forEach(bar => {
                const status = bar.getAttribute('data-status');
                if (status === 'received') {
                    bar.style.width = '33%';
                } else if (status === 'in progress') {
                    bar.style.width = '66%';
                } else if (status === 'ready to collect') {
                    bar.style.width = '100%';
                }
            });
        });
    </script>
</body>
</html>